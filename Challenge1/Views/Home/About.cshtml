@model List<Challenge1.Models.AddressModel>

@{
    ViewData["Title"] = "List Address";
}

<h1>List Address</h1>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model.OrderBy(e => e.Name))
            {
                <tr>
                    <td>@entry.Name</td>
                    <td>@entry.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No entries found.</p>
}
